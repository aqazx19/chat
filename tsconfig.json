{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@client/*": ["client/src/*"],
      "@server/*": ["server/src/*"]
    },
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "outDir": "dist-ts"
  },
  "include": ["client/src", "server/**/*.ts", "client/components/IconButton.tsx"],
  "exclude": ["node_modules", "client/dist"]
}


